<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <AlienRace.ThingDef_AlienRace ParentName="ATR_BaseMechanicalPawn">
    <defName>ATPP_Android2KITX</defName>
    <label>TX2KI Android</label>
    <description>A serie of TX2K refurbished to be used as infantry on battlefields rather than TX2, mainly due to the fear inspired on their enemies due to their particular appearance.</description>
    <alienRace>
      <generalSettings>
        <maleGenderProbability>0.5</maleGenderProbability>
        <maxDamageForSocialfight>9</maxDamageForSocialfight>
        <alienPartGenerator>
          <bodyTypes Inherit="False">
            <li>Male</li>
            <li>Female</li>
          </bodyTypes>
          <headTypes Inherit="False">
            <li>TX2KI_Female_Average_Normal</li>
            <li>TX2KI_Male_Average_Normal</li>
          </headTypes>
          <colorChannels Inherit="False">
            <li>
              <name>skin</name>
              <first Class="ColorGenerator_Options">
                <options>
                  <li>
                    <weight>10</weight>
                    <only>RGBA(1.0,1.0,1.0,1)</only>
                  </li>
                </options>
              </first>
            </li>
          </colorChannels>
        </alienPartGenerator>
      </generalSettings>
      <graphicPaths>
        <body>Things/Misc/Androids/Models/TX2KI/body/</body>
        <head>Things/Misc/Androids/Models/TX2KI/head/</head>
        <skinShader>Cutout</skinShader>
      </graphicPaths>
      <thoughtSettings>
        <cannotReceiveThoughtsAtAll>false</cannotReceiveThoughtsAtAll>
